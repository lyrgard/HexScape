<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<screen id="loadGameScreen" controller="fr.lyrgard.hexScape.gui.desktop.controller.loadGame.LoadGameScreenController" childLayout="center">
		<layer id="gameInfoLayer" childLayout="vertical">
			<panel id="mapNameDisplay" childLayout="center" align="left" visible="false">
				<image filename="gui/images/textfield/textfieldBackground.png" imageMode="resize:10,8,10,15,6,16,6,2,10,8,10,15" width="40%" height="50px"/>
				<panel childLayout="horizontal">
					<text text="${i18n.map} :" style="uiLabel16"></text>
					<text id="mapNameText" style="uiLabel16" height="16" width="300px"></text>
				</panel>
			</panel>
		</layer>
	</screen>
	<popup id="newGameOrRestoreGamePopup" childLayout="center" backgroundColor="#0000">
		<panel height="200px" width="800px" childLayout="center">
			<image filename="gui/images/textfield/textfieldBackground.png" imageMode="resize:10,8,10,15,6,16,6,2,10,8,10,15" width="100%" height="100%"/>
			<panel height="100%" width="100%" childLayout="horizontal">
				<panel height="100%" width="50%" childLayout="center">
					<!-- <control name="imageButton" id="newGameButton" align="center" height="50" width="150" valign="center" visibleToMouse="true"
						controller="fr.lyrgard.hexScape.gui.desktop.controller.loadGame.NewGameButtonController"  
						image="gui/images/newGame.png" 
						imageHover="gui/images/newGameHover.png" 
						imagePressed="gui/images/newGame.png" /> -->
					<control name="imageButtonText" id="newGameButton" align="center" height="48" width="240" textWidth="200" valign="center" visibleToMouse="true"
						controller="fr.lyrgard.hexScape.gui.desktop.controller.loadGame.NewGameButtonController"  
						image="gui/images/addWithText.png" 
						imageHover="gui/images/addWithText.png" 
						imagePressed="gui/images/addWithText.png"
						text="${i18n.newGame}" />	
				</panel>
				<panel height="100%" width="50%" childLayout="center">
					<control name="imageButtonText" id="restoreGameButton" align="center" height="48" width="240" textWidth="200" valign="center" visibleToMouse="true"
						goTo="homeScreen"  
						image="gui/images/openFileWithText.png" 
						imageHover="gui/images/openFileWithText.png" 
						imagePressed="gui/images/openFileWithText.png"
						text="${i18n.loadGame}" />	
				</panel>		
			</panel>
		</panel>
	</popup>
	<popup id="newGamePopup" childLayout="center" backgroundColor="#0000">
		<panel height="400px" width="800px" childLayout="center">
			<image filename="gui/images/textfield/textfieldBackground.png" imageMode="resize:10,8,10,15,6,16,6,2,10,8,10,15" width="100%" height="100%"/>
			<panel height="100%" width="100%" childLayout="vertical">
				<panel height="20%" width="100%" align="left" childLayout="horizontal">
					<panel height="100%" width="40%" childLayout="center">
						<text text="${i18n.gameName} :" style="uiLabel24" align="right"></text>
					</panel>
					<panel height="100%" width="60%" childLayout="horizontal">
						<panel width="10px"/>
						<control id="gameNameTextField" name="hexScapeTextfield" maxLength="50" width="316px" valign="center"/>
					</panel>
				</panel>
				<panel height="20%" width="100%" align="left" childLayout="horizontal">
					<panel height="100%" width="40%" childLayout="center">
						<text text="${i18n.map} :" style="uiLabel24" align="right"></text>
					</panel>
					<panel height="100%" width="60%" childLayout="horizontal">
						<panel width="10px"/>
						<control name="imageButtonText" id="loadGameButton" align="center" height="48" width="240" textWidth="200" valign="center" visibleToMouse="true"
							controller="fr.lyrgard.hexScape.gui.desktop.controller.loadGame.ChooseMapButtonController"   
							image="gui/images/openFileWithText.png" 
							imageHover="gui/images/openFileWithText.png" 
							imagePressed="gui/images/openFileWithText.png"
							text="${i18n.loadMap}" />	
					</panel>
				</panel>
				<panel height="20%" width="100%" align="left" childLayout="horizontal">
					<panel height="100%" width="40%" childLayout="center">
						<text text="${i18n.playerNumber} :" style="uiLabel24" align="right"></text>
					</panel>
					<panel height="100%" width="60%" childLayout="horizontal">
						<panel width="10px"/>
						<control id="playerNumberDropDown" name="hexScapeDropDown" displayItems="4" width="60px" valign="center"/>
					</panel>
				</panel>
				<panel height="40%" width="100%" align="left" childLayout="center">
					<control name="imageButtonText" id="startGameButton" visible="false" align="center" height="48" width="240" textWidth="200" valign="center" visibleToMouse="true"
							controller="fr.lyrgard.hexScape.gui.desktop.controller.loadGame.StartGameButtonController"   
							image="gui/images/startGameWithText.png" 
							imageHover="gui/images/startGameWithText.png" 
							imagePressed="gui/images/startGameWithText.png"
							text="${i18n.startGame}" />
				</panel>
			</panel>
		</panel>
	</popup>
	<popup id="restoreGamePopup" childLayout="center" backgroundColor="#0000">
		<panel height="400px" width="800px" childLayout="center">
			<image filename="gui/images/menuBackground2.png" imageMode="resize:42,1,45,12,42,1,45,2,42,1,45,15" width="100%" height="100%"/>
			<panel height="100%" width="100%" childLayout="vertical">
				<panel height="20%" width="100%" align="left" childLayout="horizontal">
					<panel height="100%" width="25%" childLayout="center">
						<text text="${i18n.gameName} :" style="nifty-label" align="right"></text>
					</panel>
					<panel height="100%" width="75%" childLayout="horizontal">
						<panel width="10px"/>
						<text id="gameNameText" style="nifty-label" valign="center"/>
					</panel>
				</panel>
				<panel height="20%" width="100%" align="left" childLayout="horizontal">
					<panel height="100%" width="25%" childLayout="center">
						<text text="${i18n.playerNumber} :" style="nifty-label" align="right"></text>
					</panel>
					<panel height="100%" width="75%" childLayout="horizontal">
						<panel width="10px"/>
						<text id="playerNumberText" style="nifty-label" valign="center"/>
					</panel>
				</panel>
			</panel>
		</panel>
	</popup>
</nifty>